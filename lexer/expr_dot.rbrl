%%{
#%

machine Lex;

EXPR_DOT := |*

  empty_lines;

  operator_expr => Keyword;

  '`' % { next_state = @in_cmd ? EXPR_CMDARG : EXPR_ARG } => Keyword;

  (
      any_ident
    | reserved_ident % { token_type = :tIDENTIFIER }
    | reserved_const % { token_type = :tCONSTANT }
    | reserved_fid   % { token_type = :tFID }
  ) % { next_state = @in_cmd ? EXPR_CMDARG : EXPR_ARG } => Keyword;

  any => { fhold; fcall COMMON_EXPR; };

*|;

}%%
#%